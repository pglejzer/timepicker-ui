{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "ESNext", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "downlevelIteration": true,
    "typeRoots": ["./src/index.d.ts", "./node_modules/@types", "./typings", "./dist/types", "./types"],
    "types": ["node"],
    "paths": {
      "timepicker-ui": ["./src/index.d.ts"]
    }
  },
  "include": ["./.eslintrc.js", "src", "docs/index.ts"],
  "exclude": [
    "./dist",
    "node_modules",
    "./src/timepicker/styles",
    "./webpack.config.js",
    "./rollup.config.js",
    "./.eslintignore",
    "./typings",
    "./src/**/*.d.ts"
  ]
}
